general {
  colors = true
  color_good = "#9000ff"
  color_degraded = "#d15cff"
  color_bad = "#ff7e00"
  interval = 1
  separator = "|"
}

order += "volume master"
order += "tztime local"

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "default"
}

tztime local {
        format = "%A %D %r"
}
